<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}}>
    <div class="modal-body-container">
        <div class="bg-green-50 rounded shadow-sm border-l-4 border-green-400 p-4 mb-5">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path
                            fill-rule="evenodd"
                            d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z"
                            clip-rule="evenodd"
                        ></path>
                    </svg>
                </div>
                <div class="ml-3 flex items-center">
                    <span class="font-extrabold text-green-800">Verify your email address</span>
                </div>
            </div>
            <div class="py-3">
                <p class="text-green-700">Re-verify your email address and click Send to continue.</p>
            </div>
        </div>
        {{#if @options.sent}}
            <InputGroup
                @type="tel"
                @name="Enter verification code"
                @value={{@options.code}}
                @helpText="Enter the code you received in your email, please check spam if not in inbox."
                @inputClass="input-lg"
            />
        {{else}}
            <InputGroup
                @type="email"
                @name="Verify your email address"
                @value={{@options.email}}
                @helpText="Have a second look and confirm your email address is correct."
                @inputClass="input-lg"
            />
        {{/if}}
    </div>
</Modal::Default>